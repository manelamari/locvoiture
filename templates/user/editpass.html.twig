{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe de {{ app.user.nom }} {{ app.user.prenom}}{% endblock %}

{% block body %}
    <div class="grix xs4 container">
        {% for message in app.flashes('error') %}
            <div class="col-xs4">
                <div class="alert alert-danger mt-4">{{message}}</div>
            </div>
        {% endfor %}
        <div class="col-xs4">
            <h1>Modification du mot de passe de {{ app.user.nom }} {{ app.user.prenom }}</h1>
            <form method="post">
                <div class="form-field">
                    <label for="pass">Mot de passe</label>
                    <input type="password" id="pass" name="pass" class="form-control">
                </div>
                <div class="form-field">
                    <label for="pass2">Confirmer le mot de passe</label>
                    <input type="password" id="pass2" name="pass2" class="form-control">
                </div>
                <button class="btn btn-lg btn-primary mt-3">Valider</button>
                <a href="{{ path('app_home') }}" class="btn btn-lg btn-primary mt-3" >Retour</a>

            </form>
        </div>

    </div>
{% endblock %}